<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="16dp">

    val id: Long?,
    val title: String?,
    val state: String?,
    val body: String?)

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <ImageView
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_weight="1"
            android:id="@+id/repo_status_1"
            android:src="@drawable/status_unavailable"/>

        <ImageView
            android:layout_gravity="start"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:id="@+id/repo_status_2"
            android:src="@drawable/status_unavailable"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/repo_id"
        style="@style/RegularFontStyle"
        android:layout_marginTop="8dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/repo_description"
        style="@style/BoldFontStyle"
        android:layout_marginTop="8dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/repo_url"
        style="@style/BoldFontStyle"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            style="@style/BoldFontStyle"
            android:textColor="@color/red"
            android:text="@string/issues_count"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/repo_issues_count"
            style="@style/BoldFontStyle"
            android:textColor="@color/red"
            android:layout_gravity="end"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <ImageView
            android:layout_gravity="end"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_weight="1"
            android:id="@+id/repo_status_3"
            android:src="@drawable/status_unavailable"/>

        <ImageView
            android:layout_gravity="start"
            android:layout_weight="1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:id="@+id/repo_status_4"
            android:src="@drawable/status_unavailable"/>

    </LinearLayout>

</LinearLayout>